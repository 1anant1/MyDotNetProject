<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Registration Form</h2>
            <hr />
            <span style="color:red;">
                @ViewBag.Message
            </span>
     </div>
     <div class="row">
        <label asp-for="FisrtName" class="col-md-3 control-label text-end">First Name</label> 
        <input asp-for="FisrtName" class="col-md-4"  />
        <span asp-validation-for="FisrtName" class="text-danger"></span>
        
  </div><br />
  <div class="row">
        <label asp-for="LastName" class="col-md-3 control-label text-end">Last Name</label> 
        <input asp-for="LastName" class="col-md-4"  />
        <span asp-validation-for="LastName" class="text-danger"></span>
  </div><br />
  <div class=" row form-check">
      <input asp-for="Gender" type="radio" class="form-check-input" id="radio1" value="Male" checked>
      <label asp-for="Gender" class="form-check-label" for="radio1">Male</label>
    </div>
    <div class="form-check">
      <input asp-for="Gender" type="radio" class="form-check-input" id="radio2" value="Female">
      <label asp-for="Gender" class="form-check-label" for="radio2">Female</label>
    </div><br />
  <div class="row">
        <label asp-for="UserName" class="col-md-3 control-label text-end">UserName</label> 
        <input asp-for="UserName" class="col-md-4" />
        <span asp-validation-for="UserName" class="text-danger"></span>
  </div><br />
  <div class="row">
        <label asp-for="CreatePassword" class="col-md-3 control-label text-end">Password</label> 
        <input asp-for="CreatePassword" class="col-md-4"  />
        <span asp-validation-for="CreatePassword" class="text-danger"></span>
  </div><br />
  <div class="row">
        <label asp-for="ConfirmPassword" class="col-md-3 control-label text-end">Confirm Password</label> 
        <input asp-for="ConfirmPassword" class="col-md-4"  />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
  </div><br />
  <div class="row">
        <label asp-for="Email" class="col-md-3 control-label text-end">Email</label> 
        <input asp-for="Email" type="email" class="col-md-4"  />
        <span asp-validation-for="Email" class="text-danger"></span>
  </div><br />
  <div class="row">
        <label asp-for="Address" class="col-md-3 control-label text-end">Address</label> 
        <input asp-for="Address" class="col-md-4"  />
        <span asp-validation-for="Address" class="text-danger"></span>
  </div><br />
  <div class="row">
        <label asp-for="PhoneNo" class="col-md-3 control-label text-end">Phone No</label> 
        <input asp-for="PhoneNo" class="col-md-4"  />
        <span asp-validation-for="PhoneNo" class="text-danger"></span>
  </div><br />
        <div class=" col-md-8 text-center">
        <button type="submit" class="btn btn-primary"  style="width:250px">Submit</button>

        </div>
        </div>
        

        
    
</form>
